<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="recipeRestPersistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.recipe.rest.entity.UserDO</class>
        <class>com.recipe.rest.entity.RecipeDO</class>
        <class>com.recipe.rest.entity.RankDO</class>
        <exclude-unlisted-classes></exclude-unlisted-classes>
    </persistence-unit>
</persistence>